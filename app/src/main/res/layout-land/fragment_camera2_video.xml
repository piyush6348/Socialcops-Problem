<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <socialcops.piyush6348.com.socialcopsproblem.model.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/texture"
        android:layout_toRightOf="@id/texture"
        android:background="@color/control_background"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:padding="@dimen/dimen_20dp"
            android:id="@+id/shift_to_picture"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="@color/black"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/record" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadsV"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:src="@drawable/ic_cloud_done_black_24dp"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="@dimen/dimen_20dp" />

        <ImageButton
            android:id="@+id/info"
            android:visibility="gone"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:contentDescription="@string/description_info"
            android:padding="@dimen/dimen_20dp"
            android:src="@drawable/ic_action_info" />

    </FrameLayout>

</RelativeLayout>
