<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <socialcops.piyush6348.com.socialcopsproblem.model.AutoFitTextureView
        android:id="@+id/texture2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_112dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/control_background">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:padding="@dimen/dimen_20dp"
            android:id="@+id/shift_to_video"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:src="@android:drawable/presence_video_online"
            android:tint="@color/black"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/picture" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploads"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:src="@drawable/ic_cloud_done_black_24dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="@dimen/dimen_20dp" />

        <ImageButton
            android:id="@+id/info2"
            android:contentDescription="@string/description_info"
            android:visibility="gone"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:padding="@dimen/dimen_20dp"
            android:src="@drawable/ic_action_info" />

    </FrameLayout>

</RelativeLayout>